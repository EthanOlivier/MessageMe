<h3 class="ui center aligned medium icon header">
  <i class="circular olive power off icon"></i>
  Log in to continue
</h3>

<div class="ui middle aligned center aligned grid">
    <div class="six wide column">
        <div class="ui placeholder segment">
            <div class="ui very relaxed stackable grid left aligned column">
                <div class="column">
                    <%= form_for(:session, url: login_path, html: { class: "ui form", role: "form" }, local: true, data: { turbo: false }) do |f| %>
                        <div class="field">
                            <%= f.label :username, "Username:" %>
                            <div class="ui left icon input">
                                <%= f.text_field :username, placeholder: "Username", autocomplete: :off %>
                                <i class="user icon"></i>
                            </div>
                        </div>
                        <div class="field">
                            <%= f.label :password, "Password:" %>
                            <div class="ui left icon input">
                                <%= f.text_field :password, placeholder: "Password", autocomplete: :off %>
                                <i class="lock icon"></i>
                            </div>
                        </div>
                        <%= f.submit "Log in", class: "ui blue submit button" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>